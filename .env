# SERVER
PORT=8080
NODE_ENV=production

# ===================================================================
# Docker 환경을 위한 올바른 DB 설정
# ===================================================================

# 1. App이 DB에 접속할 때 사용할 정보
DB_HOST=db
DB_PORT=3306
DB_USER=app
DB_PASS=app_pw
DB_NAME=stocker_db

# 2. MySQL 컨테이너가 처음 생성될 때 사용할 정보
# (위 1번 항목과 이름/비번/DB명이 일치해야 합니다)
MYSQL_ROOT_PASSWORD=supersecretpassword  # DB 관리자(root) 비밀번호, 아무거나 입력
MYSQL_DATABASE=stocker_db                # DB_NAME과 반드시 동일하게
MYSQL_USER=app                           # DB_USER와 반드시 동일하게
MYSQL_PASSWORD=app_pw                    # DB_PASS와 반드시 동일하게

# 3. 애플리케이션 보안용 비밀키
SESSION_SECRET=a_random_string_for_session
ACCESS_SECRET=MySuperSecretAccessKey!@
REFRESH_SECRET=MySuperSecretRefreshKey!@